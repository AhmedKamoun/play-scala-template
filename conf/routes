# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#http://windrush.io/tech/2013/12/17/cors-and-play.html
#make this the first rule: OPTIONS preflight request:
OPTIONS        /*all                         @controllers.login.Login.options(all)

GET            /                              @controllers.login.Login.login()
POST           /login                         @controllers.login.Login.submitLogin()
POST           /registration                  @controllers.login.Login.submitRegistration()
GET            /index                         @controllers.login.Login.index()
GET            /logout                        @controllers.login.Login.logout()

POST           /addMan                        @controllers.Application.submit()
GET            /addWoman                      @controllers.Application.addWoman()
POST           /addWoman                      @controllers.Application.submitWoman()
GET            /artisteMen                    @controllers.Application.allArtistMen()
GET            /persons                       @controllers.Application.allPersons()
GET            /TimeElepsed/:startTime        @controllers.Application.compositeResponse(startTime:Long)

POST           /addLikes                      @controllers.LikeController.addLikesToPerson()
DELETE         /removeLikes                   @controllers.LikeController.removeLikesFromPerson()
GET            /getLikes                      @controllers.LikeController.getLikesToPerson()
GET            /getLikesBy                    @controllers.LikeController.getLikesBy(description :String)

#map read test
GET            /searchFromMap                 @controllers.MapTestController.searchFromMap(key:String)

#akka test
GET            /updateActor                   @controllers.actors.ConnectionController.updateActor(id:String,msg:String)
GET            /socketRegistration            @controllers.actors.ConnectionController.socket()




# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                  controllers.Assets.at(path="/public", file)



